<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Login your Account</title>
</head>

<body class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-md">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-4">
            <div class="text-center mb-8">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Log In</h1>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">Access your account to continue</p>
            </div>
            <div id="auth-error" class="mb-4 hidden p-3 text-sm rounded-lg bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300"></div>
            <form action="/user/login" method="post">
                <div class="space-y-6">
                    <div>
                        <label for="username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Username</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                                </svg>
                            </div>
                            <input type="text" id="username" name="username"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="itssoumodip" required />
                        </div>
                    </div>
                    <div>
                        <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                                </svg>
                            </div>
                            <input type="password" id="password" name="password"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="•••••••••" required />
                        </div>
                    </div>  
                    <button type="submit"
                        class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Log In
                    </button>
                </div>
            </form>
        </div>
        <div class="text-center">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Want to Crate your Account? <a href="/user/register" class="text-blue-600 hover:underline dark:text-blue-500">Create Account</a>
            </p>
        </div>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Check for error parameters
        const urlParams = new URLSearchParams(window.location.search);
        const errorMsg = document.getElementById('auth-error');
        
        if (urlParams.has('registered') && urlParams.get('registered') === 'success') {
          // Show success message for registration
          errorMsg.textContent = 'Account created successfully! Please log in.';
          errorMsg.classList.remove('hidden', 'bg-red-100', 'text-red-800', 'dark:bg-red-900/30', 'dark:text-red-300');
          errorMsg.classList.add('bg-green-100', 'text-green-800', 'dark:bg-green-900/30', 'dark:text-green-300');
          errorMsg.classList.remove('hidden');
        }
        else if (urlParams.has('error')) {
          const error = urlParams.get('error');
          errorMsg.classList.remove('hidden');
          
          switch(error) {
            case 'auth_required':
              errorMsg.textContent = 'Please log in to access this page';
              break;
            case 'invalid_token':
              errorMsg.textContent = 'Your session has expired. Please log in again';
              break;
            case 'auth_error':
              errorMsg.textContent = 'Authentication error occurred. Please try again';
              break;
            default:
              errorMsg.textContent = 'An error occurred. Please try again';
          }
        }
      });
    </script>
</body>

</html>